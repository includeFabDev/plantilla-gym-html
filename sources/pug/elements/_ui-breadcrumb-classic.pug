//- Breadcrumbs

//- imgPath - path to image
//- pageTitle - Page title
//- breadcrumbs - obj of breadcrumbs items

mixin breadcrumb-classic(imgPath, pageTitle, breadcrumbs)

	section( style=" background: url('" + imgPath + "') no-repeat center; background-size: cover;").breadcrumbs
			.shell.context-dark.breadcrumb-wrapper.text-center
				h1.text-primary=pageTitle
				ol.breadcrumb-custom
					each link, index in breadcrumbs
						if (breadcrumbs[parseInt(index) + 1] )
							li
								a(href=link.href)= link.title
						else
							li
								= link.title
