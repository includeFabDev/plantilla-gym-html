extends  ../_skeleton

block variables
  - var activeIndex = 7

block title
  title Hire me

block page
  // Page Header
  include ../sections/_header-default

  +breadcrumb-classic('images/bg-01.jpg', 'hire me',
  {
    0: {
      "title": "Home",
      "href": "./"
    },
    1: {
      "title": "hire me"
    }
  }
  )

  section.section-md.bg-white
    .shell
      h2.text-spacing-0.text-md-left Booking form
      .range.range-40.range-center.range-md-left
        .cell-sm-10.cell-md-9.cell-lg-7
          // RD Mailform
          form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')

            .range.form-wrap.range-10
              .cell-sm-7
                .form-wrap
                  label.form-label(for="contact-name") Name
                  input#contact-name.form-input(type="text" name="name" data-constraints='@Required')
              .cell-sm-5
                .range.range-10
                  .cell-xs-8.cell-md-7
                    .form-group
                      label.radio-inline
                        input(name="input-group-radio", value="male", type="radio", checked)
                        | Male
                      label.radio-inline
                        input(name="input-group-radio", value="famale", type="radio")
                        | Female
                  .cell-xs-4.cell-md-5
                    .form-wrap
                      label.form-label(for="age") Age
                      input#age.form-input(type="text" name="age" data-constraints='@Numeric @Required')
            .form-wrap
              //Select 2

              select.form-input.select-filter(data-placeholder="Location", data-minimum-results-for-search="Infinity", data-constraints="@Required")
                option(label="1")
                option(value="2") Demo Item 1-1
                option(value="3") Demo Item 1-2
                option(value="4") Demo Item 1-2
                option(value="5") Demo Item 2-1
                option(value="6") Demo Item 2-2
                option(value="7") Demo Item 2-3

            .form-wrap
              //Select 2
              .range.range-spacing-sm-10.range-10
                .cell-md-6
                  .form-wrap
                    select.form-input.select-filter(data-placeholder="Classes type", data-minimum-results-for-search="Infinity", data-constraints="@Required")
                      option(label="1")
                      option(value="2") Demo Item 1-1
                      option(value="3") Demo Item 1-2
                      option(value="4") Demo Item 1-2
                      option(value="5") Demo Item 2-1
                      option(value="6") Demo Item 2-2
                      option(value="7") Demo Item 2-3
                .cell-md-6
                  .form-wrap
                    select.form-input.select-filter(data-placeholder="Time of classes", data-minimum-results-for-search="Infinity", data-constraints="@Required")
                      option(label="1")
                      option(value="2") Demo Item 1-1
                      option(value="3") Demo Item 1-2
                      option(value="4") Demo Item 1-2
                      option(value="5") Demo Item 2-1
                      option(value="6") Demo Item 2-2
                      option(value="7") Demo Item 2-3


            .form-wrap
              .range.range-spacing-sm-10.range-10
                .cell-md-6
                  .form-wrap
                    label.form-label(for="contact-email") E-Mail
                    input#contact-email.form-input(type="email" name="email" data-constraints="@Email @Required")
                .cell-md-6
                  .form-wrap
                    label.form-label(for="contact-phone") Phone:
                    input#contact-phone.form-input(type="text" name="phone" data-constraints="@Numeric @Required")

            .form-button.group-sm.text-center.text-sm-right
              button(type="submit").button.button-primary-2.text-spacing-0.button-md Book online now!





  // Page Footer
  include ../sections/_footer-default